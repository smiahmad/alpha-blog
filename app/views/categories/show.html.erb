<h1 class="text-center mt-4">Category: <%= @category.name%></h1>

<% if logged_in? && current_user.admin?%>
  <div class="text-center mt-4">
    <%= link_to "Edit Category", edit_category_path(@category), class: "btn btn-outline-info"%>
  </div>
<% end %>

<h3 class="text-center mt-4">Articles</h3>

<div class="flickr_pagination">
    <%= will_paginate @articles, :container => false %>
</div>

<%# we have set the @articles variable in the show method of categories_controller
to carry all articles that have this category %>
<%= render 'articles/article'%>

<div class="flickr_pagination">
    <%= will_paginate @articles, :container => false %>
</div>
