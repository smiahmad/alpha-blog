<h1 class="text-center mt-4">Alpha Bloggers</h1>

<div class="flickr_pagination">
    <%= will_paginate @users, :container => false %>
</div>

<div class="container">
  <% @users.each do |user|%>
  <div class="row justify-content-center">
    <div class="col-8 mt-4">
      <div class="card text-center shadow mb-5 bg-white rounded">
        <div class="card-header font-italic">
           <%= link_to user.username, user_path(user) %>
        </div>
        <div class="card-body">
          <h5 class="card-title"><%=link_to gravitar_for(user, size:150), user %></h5>
          <p class="card-text"><%=pluralize(user.articles.count, "article")%></p>
          <div class="container">
            <%= link_to "View Profile", user, class: "btn btn-outline-success"%>
            <% if logged_in?%>
              <% if user == current_user%>
                <%= link_to "Edit Profile", edit_user_path(user), class: "btn btn-outline-info"%>
              <% end %>
              <% if current_user.admin?%>
                <%= link_to "Delete User", user_path(user), class: "btn btn-outline-danger",
                  data: {turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete the user and all associated Articles?'} %>
              <% end %>
            <% end %>
          </div>
        </div>
        <div class="card-footer text-muted">
          <small>Joined <%=time_ago_in_words(user.created_at) %> ago,
            Updated <%=time_ago_in_words(user.updated_at) %> ago</small>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>

<div class="flickr_pagination">
    <%= will_paginate @users, :container => false %>
</div>
<br>
