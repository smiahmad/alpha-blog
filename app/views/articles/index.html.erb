<h1>All Articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3 ">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article|%>
      <tr>
        <td><%=article.title%></td>
        <td><%=article.description%></td>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= button_to 'Delete', article, method: :delete, form: {data: {turbo_confirm: 'Are you sure?'}} %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<br>

<%= link_to 'Add Article', new_article_path %>

